<UserControl x:Class="CatFlightGCSNext.UI.Views.FlightMessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatFlightGCSNext.UI.Views"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="400" Margin="0, 4, 0, 4">
    <StackPanel Orientation="Horizontal" Style="{StaticResource GradientPanelNormal}">
        <Button Width="64" Content="{materialIcons:MaterialIconExt Kind=Message, Size=36}" 
                Background="Transparent" />
        <TextBlock FontSize="16" FontWeight="Bold" Text="尚未連線至飛機" VerticalAlignment="Center" Padding="10, 0, 0, 0" />
    </StackPanel>
</UserControl>
