<UserControl x:Class="CatFlightGCSNext.UI.Controls.Toolbar.ConnectToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CatFlightGCSNext.UI.Controls.Toolbar"
             mc:Ignorable="d" 
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             d:DesignHeight="50" d:DesignWidth="400">
    <StackPanel Orientation="Horizontal">
        <ComboBox x:Name="cbComport" Width="160" Margin="4" DropDownOpened="cbComport_DropDownOpened" />
        <ComboBox x:Name="cbBaud" Width="100" Margin="4">
            <ComboBoxItem Content="9600" />
            <ComboBoxItem Content="19200" />
            <ComboBoxItem Content="38400" />
            <ComboBoxItem Content="57600" />
            <ComboBoxItem Content="115200" />
            <ComboBoxItem Content="230400" />
            <ComboBoxItem Content="460800" />
            <ComboBoxItem Content="921600" />
        </ComboBox>
        <Button x:Name="btnConnect" Width="80" Margin="4" Content="連線" FontSize="20" Click="btnConnect_Click" />
    </StackPanel>
</UserControl>
